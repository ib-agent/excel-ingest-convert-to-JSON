# Copy to .env and adjust as needed

# Django basics
DJANGO_SECRET_KEY=replace-me-for-local-dev
DJANGO_DEBUG=true
DJANGO_ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0
CORS_ALLOW_ALL_ORIGINS=true

# Optional storage integration
USE_STORAGE_SERVICE=false

# Web server command
# Dev (hot reload):
CMD=python manage.py runserver 0.0.0.0:8000
# Prod-like (uncomment to use):
# CMD=gunicorn excel_converter.wsgi:application --bind 0.0.0.0:8000 --workers=${WEB_CONCURRENCY:-2} --timeout=120

WEB_CONCURRENCY=2
DJANGO_COLLECTSTATIC=true


